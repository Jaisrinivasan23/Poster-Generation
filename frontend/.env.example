# Environment Variables for Email Forge Web
# Copy this file to .env.local and fill in your values

# OpenRouter API Key (for poster generation - server-side)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Client-side API keys (prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_ANTHROPIC_API_KEY=your_anthropic_api_key_here
NEXT_PUBLIC_OPENROUTER_API_KEY=your_openrouter_api_key_here

# Django API Configuration
NEXT_PUBLIC_DJANGO_API_URL=https://gcp.gravitron.run

# Base URL (change to your production URL when deploying)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# AWS S3 Configuration (for image storage)
# Get these from AWS Console -> IAM -> Users -> Security credentials
NEXT_PUBLIC_AWS_S3_BUCKET=your-bucket-name
NEXT_PUBLIC_AWS_ACCESS_KEY_ID=your-access-key-id
NEXT_PUBLIC_AWS_SECRET_ACCESS_KEY=your-secret-access-key
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_S3_BASE_URL=https://your-bucket-name.s3.us-east-1.amazonaws.com

# For Lambda deployment (server-side only - more secure)
# Uncomment these when deploying to Lambda and comment out NEXT_PUBLIC_ versions above
# AWS_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_REGION=us-east-1
# S3_BASE_URL=https://your-bucket-name.s3.us-east-1.amazonaws.com

# AWS SQS Configuration (for async bulk generation - Lambda only)
# SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/YOUR_ACCOUNT_ID/email-forge-bulk-queue

# AWS DynamoDB Configuration (for job status tracking - Lambda only)
# DYNAMODB_JOBS_TABLE=email-forge-jobs

# Optional: PostgreSQL Database (for direct database access)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=topmate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password
POSTGRES_SSL=false
